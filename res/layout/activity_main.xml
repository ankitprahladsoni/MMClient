<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.mmclient.activity.MainActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/enterAmountButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enterAmount"
        android:onClick="enterAmount" />

    <Button
        android:id="@+id/showSummaryButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showSummary"
        android:onClick="showSummary" />

</LinearLayout>