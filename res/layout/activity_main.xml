<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.mmclient.activity.MainActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/enterAmountButtonId"
            style="@style/CodeFont"
            android:layout_width="fill_parent"
            android:layout_marginTop="10sp"
            android:height="100sp"
            android:onClick="enterAmount"
            android:text="@string/enterAmount" />

        <Button
            android:id="@+id/showSummaryButtonId"
            style="@style/CodeFont"
            android:layout_width="fill_parent"
            android:height="100sp"
            android:onClick="showSummary"
            android:text="@string/showSummary" />
    </LinearLayout>
</LinearLayout>